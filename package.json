{
  "name": "docker-quick-actions",
  "displayName": "Docker Quick Actions",
  "description": "Manage Docker containers directly from VSCode",
  "version": "0.0.1",
  "publisher": "tamby",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docker-quick-actions",
          "title": "Docker Quick Actions",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "docker-quick-actions": [
        {
          "id": "dockerContainers",
          "name": "Containers",
          "icon": "$(package)",
          "contextualTitle": "Docker Containers"
        }
      ]
    },
    "commands": [
      {
        "command": "docker-quick-actions.refreshContainers",
        "title": "Refresh Containers",
        "icon": "$(refresh)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.startContainer",
        "title": "Start Container",
        "icon": "$(play)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.stopContainer",
        "title": "Stop Container",
        "icon": "$(debug-stop)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.restartContainer",
        "title": "Restart Container",
        "icon": "$(debug-restart)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.removeContainer",
        "title": "Remove Container",
        "icon": "$(trash)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.viewLogs",
        "title": "View Logs",
        "icon": "$(output)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.execBash",
        "title": "Exec Bash",
        "icon": "$(terminal)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.showResourcesMonitor",
        "title": "Show Resources Monitor",
        "icon": "$(graph)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.toggleStatsInTreeView",
        "title": "Toggle Stats in TreeView",
        "icon": "$(pulse)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.exportStatsReport",
        "title": "Export Stats Report",
        "icon": "$(export)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.openMultiLogs",
        "title": "Open Multi-Container Logs",
        "icon": "$(list-unordered)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.addToMultiLogs",
        "title": "Add to Logs Viewer",
        "icon": "$(add)",
        "category": "Docker"
      },
      {
        "command": "docker-quick-actions.clearMultiLogs",
        "title": "Clear All Logs",
        "icon": "$(clear-all)",
        "category": "Docker"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "docker-quick-actions.refreshContainers",
          "when": "view == dockerContainers",
          "group": "navigation"
        },
        {
          "command": "docker-quick-actions.toggleStatsInTreeView",
          "when": "view == dockerContainers",
          "group": "navigation"
        },
        {
          "command": "docker-quick-actions.showResourcesMonitor",
          "when": "view == dockerContainers",
          "group": "navigation"
        },
        {
          "command": "docker-quick-actions.openMultiLogs",
          "when": "view == dockerContainers",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "docker-quick-actions.execBash",
          "when": "view == dockerContainers && viewItem == running",
          "group": "inline@1"
        },
        {
          "command": "docker-quick-actions.viewLogs",
          "when": "view == dockerContainers && viewItem == running",
          "group": "inline@2"
        },
        {
          "command": "docker-quick-actions.stopContainer",
          "when": "view == dockerContainers && viewItem == running",
          "group": "inline@3"
        },
        {
          "command": "docker-quick-actions.startContainer",
          "when": "view == dockerContainers && viewItem == stopped",
          "group": "inline@1"
        },
        {
          "command": "docker-quick-actions.removeContainer",
          "when": "view == dockerContainers && viewItem == stopped",
          "group": "inline@2"
        },
        {
          "command": "docker-quick-actions.restartContainer",
          "when": "view == dockerContainers && viewItem == running",
          "group": "1_actions"
        },
        {
          "command": "docker-quick-actions.removeContainer",
          "when": "view == dockerContainers && viewItem == stopped",
          "group": "2_danger"
        },
        {
          "command": "docker-quick-actions.viewLogs",
          "when": "view == dockerContainers",
          "group": "3_info"
        },
        {
          "command": "docker-quick-actions.execBash",
          "when": "view == dockerContainers && viewItem == running",
          "group": "3_info"
        },
        {
          "command": "docker-quick-actions.toggleStatsInTreeView",
          "when": "view == dockerContainers",
          "group": "4_stats"
        },
        {
          "command": "docker-quick-actions.showResourcesMonitor",
          "when": "view == dockerContainers",
          "group": "4_stats"
        },
        {
          "command": "docker-quick-actions.addToMultiLogs",
          "when": "view == dockerContainers && viewItem == running",
          "group": "5_multilogs@1"
        },
        {
          "command": "docker-quick-actions.openMultiLogs",
          "when": "view == dockerContainers",
          "group": "5_multilogs@2"
        },
        {
          "command": "docker-quick-actions.clearMultiLogs",
          "when": "view == dockerContainers",
          "group": "5_multilogs@3"
        }
      ]
    },
    "keybindings": [
      {
        "command": "docker-quick-actions.refreshContainers",
        "key": "ctrl+shift+alt+r",
        "mac": "ctrl+shift+alt+r"
      },
      {
        "command": "docker-quick-actions.showResourcesMonitor",
        "key": "ctrl+shift+alt+m",
        "mac": "ctrl+shift+alt+m"
      },
      {
        "command": "docker-quick-actions.openMultiLogs",
        "key": "ctrl+shift+alt+l",
        "mac": "ctrl+shift+alt+l"
      }
    ],
    "configuration": {
      "title": "Docker Quick Actions",
      "properties": {
        "dockerQuickActions.stats.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable container resource stats collection"
        },
        "dockerQuickActions.stats.refreshInterval": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 30,
          "description": "Stats refresh interval in seconds"
        },
        "dockerQuickActions.stats.showInTreeView": {
          "type": "boolean",
          "default": true,
          "description": "Show inline stats (CPU/RAM) in the TreeView"
        },
        "dockerQuickActions.alerts.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable resource usage alerts"
        },
        "dockerQuickActions.alerts.cpuThreshold": {
          "type": "number",
          "default": 80,
          "minimum": 10,
          "maximum": 100,
          "description": "CPU usage threshold (%) to trigger alerts"
        },
        "dockerQuickActions.alerts.memoryThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 10,
          "maximum": 100,
          "description": "Memory usage threshold (%) to trigger alerts"
        },
        "dockerQuickActions.logs.maxContainers": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of containers in the Multi-Logs viewer"
        },
        "dockerQuickActions.logs.bufferSize": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 100000,
          "description": "Maximum log entries kept in memory per session"
        },
        "dockerQuickActions.logs.autoScroll": {
          "type": "boolean",
          "default": true,
          "description": "Auto-scroll to latest log entries"
        },
        "dockerQuickActions.logs.timestampFormat": {
          "type": "string",
          "enum": ["absolute", "relative"],
          "default": "absolute",
          "description": "Timestamp display format in the logs viewer"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "npm run compile && cursor --extensionDevelopmentPath=.",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dockerode": "^4.0.0"
  }
}
